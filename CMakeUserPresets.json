{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-pico-sdk",
      "displayName": "Windows Pico SDK (Ninja Fix)",
      "description": "Forces CMake to find the Ninja build tool in the standard Pico SDK location",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PICO_SDK_PATH": "C:/Users/MikeS/.pico-sdk/sdk/2.2.0",
        "CMAKE_MAKE_PROGRAM": "C:/Users/MikeS/.pico-sdk/ninja/v1.12.1/ninja.exe",
        "CMAKE_C_COMPILER": "C:/Users/MikeS/.pico-sdk/toolchain/14_2_Rel1/bin/arm-none-eabi-gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/Users/MikeS/.pico-sdk/toolchain/14_2_Rel1/bin/arm-none-eabi-g++.exe"
      }
    }
  ]
}